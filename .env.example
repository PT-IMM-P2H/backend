# =========================================================================
# DATABASE CONFIGURATION
# =========================================================================
# Ganti dengan kredensial database PostgreSQL Anda
DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# =========================================================================
# JWT AUTH CONFIGURATION
# =========================================================================
#    python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your_secret_key_here_generate_with_command_above
ALGORITHM=HS256
# Durasi token dalam menit (15-60 recommended)
ACCESS_TOKEN_EXPIRE_MINUTES=60

# =========================================================================
# TELEGRAM BOT CONFIGURATION
# =========================================================================
# Token dari @BotFather
TELEGRAM_BOT_TOKEN=your_bot_token_here
# ID Chat/Group tujuan notifikasi (gunakan @userinfobot)
TELEGRAM_CHAT_ID=your_chat_id_here

# =========================================================================
# APPLICATION SETTINGS
# =========================================================================
APP_NAME="P2H System PT. IMM"
APP_VERSION=1.0.0
TIMEZONE=Asia/Makassar

# =========================================================================
# CORS SETTINGS
# =========================================================================
# Tambahkan origin frontend Anda (pisahkan dengan koma)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# =========================================================================
# ENVIRONMENT
# =========================================================================
# development | production | testing
ENVIRONMENT=development
